{
  "name": "countdown-timer",
  "version": "0.0.4",
  "description": "A customised countdown timer.",
  "author": "Jonathan Blades",
  "license": "MIT",
  "source": "src/index.html",
  "type": "module",
  "scripts": {
    "clean:dist": "rimraf dist",
    "clean:dist-serve": "rimraf dist-serve",
    "start": "npm run clean:dist-serve && parcel serve src/index.pug src/robots.txt --dist-dir dist-serve --port 1236",
    "build": "npm run clean:dist && parcel build src/index.pug src/robots.txt --no-source-maps --public-url /countdown-timer",
    "test": "jest"
  },
  "browserslist": "defaults and supports es6-module",
  "devDependencies": {
    "@parcel/transformer-pug": "2.8.0",
    "@parcel/transformer-sass": "2.8.0",
    "@types/jest": "^29.1.2",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "parcel": "^2.8.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4"
  }
}
